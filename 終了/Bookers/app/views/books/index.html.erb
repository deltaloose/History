<h2>User info</h2>
<img class="attachment user profile_image fallback" src="" alt="No image">
<table class="table">
	<tbody>
		<tr></tr>
		<tr>
			<th>name</th>
			<!--th 名前引っ張る -->
		</tr>
		<tr>
			<th>introduction</th>
		</tr>
		<div class="user-config">
			<%= link_to "プロフ編集",edit_user_path(current_user) %>
		</div>
	</tbody>
</table>
<h2>New book</h2>
<%= form_for(@book, url: 'books') do |f| %>
<label for="book_title">Title</label>
<%= f.text_field :title %>
<label for="book_opinion">Opinion</label>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
<h2>Book detail</h2>
<table>
	<thead>
		<tr>
			<th class="title">Title</th>
			<th class="opinion">Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td>
					<%= link_to book_path(book.id) do %>
					<%= book.title %>
					<% end %>
				</td>
			</tr>
			<tr>
				<td><%= book.body %></td>
			</tr>
		<% end %>
	</tbody>
</table>