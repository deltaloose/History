
<% if flash[:notice] %>
  <p id="notice">Book was successfully update</p>
<% end %>
<% if flash[:success] %>
  <p class="success">Book was successfully create</p>
<% end %>

<p>
	<strong>Title:</strong>
	<%= @book.title %>
</p>
<p>
	<strong>Body:</strong>
	<%= @book.body %>
</p>
<a class="edit">
<%= link_to "Edit", edit_book_path(@book) %></a>
<%= link_to "Back", new_book_path %></a>