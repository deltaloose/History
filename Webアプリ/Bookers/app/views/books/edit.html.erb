<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<div class="error_explanation">
			<h2 class="error_messege"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
			<ul>
				<% @book.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
		<div class="field">
			<label for="book_title">Title</label>
		</div>
			<%= f.text_field :title %>
		<div class="field">
			<label for="book_body">Body</label>
		</div>
			<%= f.text_field :body %>
		<div class="update">
		<%= f.submit 'Update Book' %>
		</div>
		<td class="edit">
			<%= link_to "Show", book_path %></td>
		<td class="edit">
			<%= link_to "Back", books_path %></td>
<% end %>