<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th class="title">Title</th>
			<th class="body">Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td class="title1">
					<%= book.title %>
				</td>
				<td class="body1">
					<%= book.body %>
				</td>
				<td class="show">
					<%= link_to "Show", book_path(book.id) %>
				</td>
				<td class="Edit">
					<%= link_to "Edit", edit_book_path(book.id) %>
				</td>
				<td class="Destroy">
			        <%= link_to  "Destroy", book_path(book.id), method: :delete, data: { confirm: 'Are you sure?' }  %>
			    </td>
			</tr>
		<% end %>
	</tbody>
</table>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
	<div class="error_explanation">
		<h2 class="error_messege"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
		<ul>
			<% @book.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<div class="field">
	<label for="book_title">Title</label>
</div>
<%= f.text_field :title %>
<div class="field">
	<label for="book_body">Body</label>
</div>
<%= f.text_area :body %>
<div class="action">
<%= f.submit 'Create Book' %>
</div>
<% end %>